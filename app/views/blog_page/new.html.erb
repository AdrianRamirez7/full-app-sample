<h3>Add a New Blog Page</h3>

<%= form_with model: @blog_page, url: blog_pages_path, method: :post do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Blog Page' %>
  </div>
<% end %>
<%= link_to 'Back to All Blog Pages', blog_pages_path %>
